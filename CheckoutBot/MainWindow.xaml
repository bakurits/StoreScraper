                                                        <Setter Property="CornerRadius" Value="5"/>
                                                    </Style>
                                                </TextBox.Resources>

                                            </TextBox>

                                        </StackPanel>

                                        <StackPanel Grid.Row="4" Grid.ColumnSpan="2">
                                            <Label Content="Country" Foreground="#576379" FontWeight="SemiBold" />
