                            <Label Content="PRODUCT" Foreground="#576379" FontWeight="SemiBold" />
                            
                            
                            <ComboBox Grid.Column="0" Margin="6 0" HorizontalAlignment="Left" Width="300" VerticalAlignment="Top"  Style="{StaticResource ComboBoxTest2}">
                                
                            </ComboBox>

                            

