                            </ComboBox>

                            <Label Content="START TIME" Foreground="#576379" FontWeight="SemiBold" Margin="0 5"/>

                            <ComboBox Grid.Column="0" Margin="6 0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Style="{StaticResource ComboBoxTest2}">
                                <ComboBoxItem>Mike Jonhson - **** 0001</ComboBoxItem>

                            </ComboBox>


                            <Button Margin="6,20" Width="100" HorizontalAlignment="Left" Padding="5" Background="#5db8f1" Foreground="#ffffff" BorderBrush="#ebecf0">


                               
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                        <Style.Triggers>
                                            <Trigger Property="Button.IsMouseOver" Value="True">
                                                <Setter Property="Button.Background" Value="Red" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                    





                                </Button.Resources>

                                ADD TASK
                            </Button>

                        </StackPanel>



                    </GroupBox>
                    <GroupBox  Grid.Column="1" Margin="10 20 20 20" Grid.ColumnSpan="6" Background="#ffffff" BorderThickness="0">
                        <StackPanel Margin="10">
                            <DockPanel>
                                <Label Content="TASKS" Foreground="#576379" FontWeight="SemiBold" Margin="-2 0"/>
                                <Label Content="47 tasks" Foreground="#5db8f1" FontWeight="SemiBold" Margin="-2 0" HorizontalAlignment="Right"/>

                            </DockPanel>
                            <ListView ItemsSource="{Binding SourceCollection}" Name="tasksList" Background="#ffffff" Grid.Row="1" BorderBrush="#ebecf0" >
                                <ListView.View>
                                    <GridView ColumnHeaderContainerStyle = "{StaticResource GridViewColumnHeaderStyle1}" >
                                        <GridViewColumn>
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox Tag="{Binding ID}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>

                                        <GridViewColumn Header="Keywords" Width="auto" DisplayMemberBinding="{Binding Keywords}" />
                                        <GridViewColumn Header="Size" Width="auto" DisplayMemberBinding="{Binding Size}" />
                                        <GridViewColumn Header="No. of retries" Width="auto" DisplayMemberBinding="{Binding Retries}" />
                                        <GridViewColumn Header="Status"  Width="auto" >
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>

                                                    <StackPanel Orientation="Horizontal" >
                                                        <!--Image /-->
                                                        <Image Height="16" Source="{Binding ListImage}"  Margin="5 0" VerticalAlignment="Center" />


                                                        <!-- YOU NEED TO POINT THIS TO YOUR IMAGE -->
                                                        <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>

                                                    </StackPanel>

                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>

                                        </GridViewColumn>
                                    </GridView>


                                </ListView.View>

                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="Foreground" Value="#576379" />
                                        <Setter Property="Background" Value="#ffffff" />
                                        <Setter Property="Margin" Value="5" />

                                    </Style>
                                </ListView.ItemContainerStyle>


                            </ListView>

                            <DockPanel>

                                <Button Margin="6,20"  HorizontalAlignment="Left" Padding="5" Background="#ffffff" Foreground="#787878" BorderBrush="#787878">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="5"/>

                                        </Style>
                                    </Button.Resources>

                                    DELETE SELECTED
                                </Button>


                                <DockPanel HorizontalAlignment="Right">


                                    <Button  Margin="6,20" HorizontalAlignment="Right"   Padding="5" Background="#5db8f1" Foreground="#ffffff" BorderBrush="#ebecf0">
                                        <Button.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>

                                        START
                                    </Button>


                                    <Button Margin="6,20"  HorizontalAlignment="Right" Padding="5" Background="#e9545a" Foreground="#ffffff" BorderBrush="#ebecf0">
                                        <Button.Resources>
                                            <Style TargetType="{x:Type Border}">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>

                                        STOP
                                    </Button>
                                </DockPanel>

                            </DockPanel>

                        </StackPanel>

                    </GroupBox>
                </Grid>
            </TabItem>
