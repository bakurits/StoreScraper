                                            <ComboBox Name="billingAddress_state" Grid.Column="0" Margin="6 0" HorizontalAlignment="Stretch" VerticalAlignment="Top"  Style="{StaticResource ComboBoxTest2}">
                                                <ComboBoxItem>New York</ComboBoxItem>

                                            </ComboBox>


                                        </StackPanel>


                                    </Grid>
                                    
                                    
                                    
                                </DockPanel>

                                <DockPanel>
