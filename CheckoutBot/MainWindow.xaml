                                                    </Style>
                                                </TextBox.Resources>

                                            </TextBox>

                                        </StackPanel>
                                        <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                                            <Label Content="City" Foreground="#576379" FontWeight="SemiBold" />
                                            <TextBox Name="shippingAddress_city" Margin="6 0 " BorderBrush="#ebecf0" Padding="3">
