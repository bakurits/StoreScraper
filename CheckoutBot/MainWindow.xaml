                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="CornerRadius" Value="5"/>
                                                    </Style>
                                                </TextBox.Resources>

                                            </TextBox>

                                        </StackPanel>
                                        <StackPanel Grid.Row="3" Grid.ColumnSpan="1">
                                            <Label Content="City" Foreground="#576379" FontWeight="SemiBold" />
                                            <TextBox Name="billingAddress_city" Margin="6 0 " BorderBrush="#ebecf0" Padding="3">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="CornerRadius" Value="5"/>
                                                    </Style>
                                                </TextBox.Resources>

                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="3" Grid.Column="2">
                                            <Label Content="ZIP" Foreground="#576379" FontWeight="SemiBold" />
                                            <TextBox HorizontalAlignment="Left" Name="billingAddress_zip" Margin="6 0 " BorderBrush="#ebecf0" Padding="3" MinWidth="70">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="CornerRadius" Value="5"/>
                                                    </Style>
                                                </TextBox.Resources>

                                            </TextBox>

                                        </StackPanel>

                                        <StackPanel Grid.Row="4" Grid.ColumnSpan="1">
                                            <Label Content="Country" Foreground="#576379" FontWeight="SemiBold" />
                                            <ComboBox SelectionChanged="handleBillingCountrySelect" Name="billingAddress_country" Grid.Column="0" Margin="6 0" HorizontalAlignment="Stretch" VerticalAlignment="Top"  Style="{StaticResource ComboBoxTest2}">

                                            </ComboBox>
                                        </StackPanel>

