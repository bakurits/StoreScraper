                                            <Label Content="AddressLine1" Foreground="#576379" FontWeight="SemiBold" />
                                            <TextBox Name="shippingAddress_address1" Margin="6 0 " BorderBrush="#ebecf0" Padding="3">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="CornerRadius" Value="5"/>
                                                    </Style>
                                                </TextBox.Resources>

                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Grid.Column="2">
                                            <Label Content="AddressLine2" Foreground="#576379" FontWeight="SemiBold" />
                                            <TextBox Name="shippingAddress_address2" Margin="6 0 " BorderBrush="#ebecf0" Padding="3">
